@model List<Dnd.Exaltado.Players.Entity.Players>

@{
    var Id = "";
    Dnd.Exaltado.Players.Entity.Players theadItens = new Dnd.Exaltado.Players.Entity.Players();
 }

<div id="PlayersInsertDiv"></div>
<div id="PlayersViewDiv"></div>

<div class="card card-outline card-dark">
    <div class="card-header">
        <a class="btn bg-gradient-success float-left" id="btn-insert-player">
            <i class="fas fa-plus">
            </i>
            Add Player
        </a>
    </div>
    <div class="card-body">

        <div class="dataTables_wrapper dt-bootstrap4">

            <div class="row">
                <div class="col-sm-12">
                    <table id="tabela-players" class="table table-bordered table-striped dataTable" role="grid" data-toggle="data-table">

                        <thead id="theadItens">
                            <tr role="row">
                                @foreach (System.Reflection.PropertyInfo propertyInfo in theadItens.GetType().GetProperties())
                                {
                                    <th class="@propertyInfo.Name">@propertyInfo.Name</th>
                                }
                                <th style="width:195px"></th>
                            </tr>

                        </thead>
                        <tbody id="tbodyItens">
                            @foreach (Dnd.Exaltado.Players.Entity.Players players in Model)
                            {

                                <tr role="row">
                                    @foreach (System.Reflection.PropertyInfo propertyInfo in players.GetType().GetProperties())
                                    {
                                        <td>@propertyInfo.GetValue(players, null)</td>

                                        if (propertyInfo.Name == "_Id")
                                        {
                                            Id = propertyInfo.GetValue(players, null).ToString();
                                        }

                                    }

                                    <td>
                                        <a class="btn btn-primary btn-sm" id="btn-view-player" value="@Id">
                                            <i class="fas fa-folder">
                                            </i>
                                            View
                                        </a>
                                        <a class="btn btn-info btn-sm" href="#">
                                            <i class="fas fa-pencil-alt">
                                            </i>
                                            Edit
                                        </a>
                                        <a class="btn btn-danger btn-sm" href="#">
                                            <i class="fas fa-trash">
                                            </i>
                                            Delete
                                        </a>
                                    </td>

                                </tr>
                            }
                        </tbody>
                        </table>

                </div>
            </div>
        </div>
    </div>
</div>


