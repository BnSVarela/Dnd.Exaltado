@{
    var ModelName = Model[0].GetType().Name.ToString();
    var DivInsert = ModelName + "InsertDiv";
    var DivEdit = ModelName + "EditDiv";
    var DivView = ModelName + "ViewDiv";
    var ButtonInsert = "btn-insert-" + ModelName;
}

<div id="@DivInsert"></div>
<div id="@DivEdit"></div>
<div id="@DivView"></div>

<div class="card card-outline card-dark">
    <div class="card-header">
        <a class="btn bg-gradient-success float-left" id="@ButtonInsert" value="0">
            <i class="fas fa-plus">
            </i>
            Add @ModelName
        </a>
    </div>
    <div class="card-body">
        
        @Html.Partial("_GenerateGridList")

    </div>
</div>


